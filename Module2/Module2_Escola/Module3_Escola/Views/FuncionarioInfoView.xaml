<Window x:Class="Module3_Escola.Views.FuncionarioInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module3_Escola.Views"
        mc:Ignorable="d"
        Title="FuncionarioInfoView" Height="301" Width="300">
    <DockPanel LastChildFill="True" Margin="0,0,0,3">
        <Label FontSize="30" FontFamily="Arial" Foreground="#696969" HorizontalAlignment="Center"  Margin="0,3,0,159" Width="107"  >Salvo!</Label>
        <Rectangle DockPanel.Dock="Bottom" Height="114" Fill="#ECECEC" Margin="-107,0,0,0"></Rectangle>
        <Label DockPanel.Dock="Top" Content="{Binding Info, FallbackValue='Seus dados foram atualizados'}" VerticalAlignment="Bottom" Margin="-107,0,107,0" RenderTransformOrigin="0.438,-3.962" Height="44"></Label>
    </DockPanel>
</Window>
